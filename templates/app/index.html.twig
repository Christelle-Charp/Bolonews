            <div class="row">
                <h3>A la Une!</h3>
                <a href="{{path('app_show', {id:articleUne.id})}}" title="En savoir plus sur {{articleUne.titre}}">
                    <div class="card-une">
                        <div class="column-45">
                            <img src="{{asset('images/article/' ~ articleUne.image)}}" alt="Illustration de l'article {{articleUne.titre}}">
                        </div>
                        <div class="column-45">
